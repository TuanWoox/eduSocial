<% layout('./layouts/indexboilerplate') -%>
<div class="container mt-4">
    <!-- Back to Post List Button -->
    
    <!-- Post Title -->
    <h1 class="display-4 text-primary mb-4"><%= lesson.title %></h1>

    <!-- Post Content -->
    <div>
        <p class="lead m-2"><%- lesson.content %></p>
    </div>
    <div class="d-flex justify-content-between">
        <% if(previousLessonId){ %>
            <a href="/courses/<%= courseID  %>/<%= previousLessonId %>" class="btn btn-outline-danger ">Bài phía trước</a>
        <% } %>
        <% if(nextLessonId) { %>
        <a href="/courses/<%= courseID%>/<%= nextLessonId %>" class="btn btn-outline-info ">Bài tiếp theo</a>
        <% } %>
    </div>
    <a href="/courses/<%= courseID %>" class="btn btn-outline-primary mt-4 mb-4"><i class="bi bi-arrow-left-circle"></i> Trở về khóa học</a>


</div>
