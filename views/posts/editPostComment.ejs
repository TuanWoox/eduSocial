<% layout('layouts/indexboilerplate') -%>

<div class="container mt-5">
    <h2>Edit Comment</h2>
    <form action="/posts/<%= comment.commentedOnPost %>/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="body">Comment:</label>
            <textarea id="body" name="body" class="form-control" rows="5"><%= comment.body %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update Comment</button>
    </form>
    <a href="/posts/<%= comment.commentedOnPost %>" class="btn btn-secondary mt-3">Cancel</a>
</div>
