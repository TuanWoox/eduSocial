<% layout('layouts/indexboilerplate') -%>

<div class="container mt-4">
    <div class="breadcrumb mb-3 d-flex align-items-center">
        <i class="fa-solid fa-house me-2"></i> =>
        <p class="mb-0">Bài Viết</p>
    </div>

    <div class="row">
        <div class="col-lg-7 main-left">
            <nav class="navbar navbar-expand-lg navbar-light bg-light p-2 rounded mb-4">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><button class="btn active me-2">Bài Viết</button></li>
                    <li class="nav-item"><button class="btn">Bài viết của tôi</button></li>
                </ul>
                <div class="d-flex align-items-center">
                    <p class="mb-0 me-2">Sắp Xếp:</p>
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Mới nhất
                        <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li class="active"><a href="#">Mới Nhất</a></li>
                            <li><a href="#">Hoạt động</a></li>
                            <li><a href="#">Lượt xem</a></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <% if (post && post.length > 0) { %>
                <div class="post-container d-flex flex-column align-items-center"> <!-- Added container for centering -->
                    <% post.forEach(post => { %>
                        <div class="card mx-3 my-3" style="width: 100%; max-width: 600px;"> <!-- Adjusted width for consistency -->
                            <div class="card-body">
                                <div class="d-flex justify-content-start align-items-start"> <!-- Use align-items-start for consistency -->
                                    <div class="user-content me-3">
                                        <img src="/user.png" class="img-fluid rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                                    </div>
                                    <div class="nd">
                                        <a href="/posts/<%= post._id %>" class="text-decoration-none">
                                            <h5 class="card-title"><%= post.title %></h5>
                                        </a>
                                        <!-- <p class="card-text"><%= post.content.length > 100 ? post.content.substring(0, 100) + '...' : post.content %></p> Truncate long content -->
                                        <small>Category: <%= post.type %></small>
                                        <div class="d-flex set mt-2">
                                            <a class="card-link btn btn-success me-2" href="/posts/<%= post._id %>">Xem chi tiết</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <h2>Hiện chưa có bài post nào!</h2>
            <% } %>
        </div>

        <div class="col-lg-4 main-right">
            <div class="common-tag bg-light p-3 rounded mb-4">
                <h2 class="text-danger">Tag Phổ biến</h2>
                <div class="tag-item d-flex justify-content-between align-items-center mb-2">
                    <p class="mb-0">C#</p>
                    <p class="mb-0">x138</p>
                </div>
                <div class="morebtn text-end">
                    <a href="#">Xem thêm...</a>
                </div>
            </div>
        </div>
    </div>
</div>
