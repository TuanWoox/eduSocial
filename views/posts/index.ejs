<% layout('layouts/indexboilerplate') -%>

<div class="container mt-4">
    <!-- Breadcrumb Navigation -->
    <div class="breadcrumb mb-3 ms-2 d-flex align-items-center">
        <i class="bi bi-house-door"></i> <strong>></strong>
        <p class="mb-0 ms-2">Bài Viết</p>
    </div>

    <div class="row">
        <!-- Main Content (Left Side) -->
        <div class="col-lg-8 main-left">
            <!-- Navbar for Sorting -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light p-3 rounded mb-4">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <button class="btn btn-outline-primary active me-2">Bài Viết</button>
                    </li>
                    <li class="nav-item">
                        <button class="btn btn-outline-secondary">Bài viết của tôi</button>
                    </li>
                </ul>
                <div class="d-flex align-items-center">
                    <p class="mb-0 me-2">Sắp Xếp:</p>
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Mới nhất
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#" class="dropdown-item">Mới Nhất</a></li>
                            <li><a href="#" class="dropdown-item">Hoạt động</a></li>
                            <li><a href="#" class="dropdown-item">Lượt xem</a></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Create Post Button -->
            <a href="/posts/create" class="btn btn-primary mb-2">Tạo bài viết</a>

            <!-- Post List -->
            <% if (post && post.length > 0) { %>
                <div class="post-container d-flex flex-column align-items-start">
                    <% post.forEach(post => { %>
                        <div class="card mx-3 my-3" style="width: 100%; max-width: 600px;">
                            <div class="card-body">
                                <!-- Post User and Content -->
                                <div class="d-flex align-items-start">
                                    <div class="user-content me-3">
                                        <img src="/user.png" class="img-fluid rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                                    </div>
                                    <div class="nd">
                                        <a href="/posts/<%= post._id %>" class="text-decoration-none">
                                            <h5 class="card-title text-primary"><%= post.title %></h5>
                                        </a>
                                        <small class="text-muted">Category: <%= post.type %></small>
                                        <div class="d-flex justify-content-start mt-2">
                                            <a class="card-link btn btn-success btn-sm me-2" href="/posts/<%= post._id %>">Xem chi tiết</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <h2 class="text-center">Hiện chưa có bài post nào!</h2>
            <% } %>
        </div>

        <!-- Sidebar (Right Side) -->
        <div class="col-lg-4 main-right">
            <!-- Popular Tags Section -->
            <div class="common-tag bg-light p-4 rounded mb-4 shadow-sm">
                <h3 class="text-danger mb-3">Tag Phổ biến</h3>
                <div class="tag-item d-flex justify-content-between align-items-center mb-3">
                    <p class="mb-0">C#</p>
                    <p class="mb-0">x138</p>
                </div>
                <div class="tag-item d-flex justify-content-between align-items-center mb-3">
                    <p class="mb-0">JavaScript</p>
                    <p class="mb-0">x102</p>
                </div>
                <div class="morebtn text-end">
                    <a href="#" class="text-decoration-none text-primary">Xem thêm...</a>
                </div>
            </div>
        </div>
    </div>
</div>
