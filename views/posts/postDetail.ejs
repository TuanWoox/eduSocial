<% layout('./layouts/sidebar') -%>
<div class="container mt-4">
    <div class="breadcrumb mb-3 d-flex align-items-center">
        <i class="fa-solid fa-house me-2"></i> =>
        <p class="mb-0">Bài Viết</p>
    </div>
    
    <div class="row">
        <div class="col-lg-7 main-left">
            <nav class="navbar navbar-expand-lg navbar-light bg-light p-2 rounded mb-4">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><button class="btn active me-2">Bài Viết</button></li>
                    <li class="nav-item"><button class="btn me-2">Series</button></li>
                    <li class="nav-item"><button class="btn">Bài viết của tôi</button></li>
                </ul>
                <div class="d-flex align-items-center">
                    <p class="mb-0 me-2">Sắp Xếp:</p>
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Mới nhất
                        <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                          <li class="active"><a href="#">Mới Nhất</a></li>
                          <li><a href="#">Hoạt động</a></li>
                          <li><a href="#">Lượt xem</a></li>
                        </ul>
                      </div>
                </div>
            </nav>
<div class="post">
    <a href="/user/post/" class="back-btn"><i class="fa-solid fa-arrow-left"></i> Back to Post List</a>
    <h1><%= post.title %></h1>
    <p><strong>Tác giả:</strong><%= post.name %></p>
    <p><strong>Nội dung:</strong> <%= post.content %></p>
    <% if (post.media) { %>
        <p><strong>Media:</strong></p>
        <% if (post.media.endsWith('.mp4')) { %>
            <video controls>
                <source src="<%= post.media %>" type="video/mp4">
                Trình duyệt của bạn không hỗ trợ video.
            </video>
        <% } else { %>
            <img src="<%= post.media %>" alt="Media">
        <% } %>
    <% } %>
    <p><strong>Lượt xem:</strong> <%= post.views %></p>
    <div class="d-flex set">
        <a class="card-link btn btn-info me-2" href="/user/post/<%= post._id %>/edit">Edit</a> 
        <form action="/user/post/<%= post._id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>